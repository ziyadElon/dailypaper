<header class="site-header blog-content-header" role="banner" style="z-index:999;">
  <div class="blog-header-container">
    <div class="row wc-m0">
      
      <div class="col-md-2 col-6">
        <a href="/">
          {% if section.settings.image-logo %}
          	<div class="logo-images">
              <img src="{{ section.settings.image-logo | img_url: 'master' }}" alt="{{ section.settings.image-logo.alt }}" class="img-fluid">
            </div>
          {% else %}
            <h1 class="img-logo-text">{{ shop.name }}</h1>
          {% endif %}
        </a>
      </div>
      
      <div class="col-md-8 mediam-small-hide">
        <div class="nav-menu">
          <nav class="navigation content-menu">
            {% assign look_menu = section.settings.blog-menu %}
            
            <ul class="navigation-area">
              {% for link in linklists[look_menu].links %}
                <li class="nav-link nav-dropdown">
                  <a href="{{ link.url }}" class="d-block nav-title{% if link.active %} active{% endif %}">{{ link.title }}</a>
                  {% if link.links != blank %}
                    <ul class="navmenu navmenu-submenu">
                      {% for childlink in link.links %}
                        <li class="navmenu-item nav-link">
                          <a href="{{ childlink.url }}" class="d-block subnav-title{% if childlink.active %} active{% endif %}">{{ childlink.title }}</a>
                        </li>
                      {% endfor %}
                    </ul>
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
            
          </nav>
        </div>
      </div>
      
      <div class="col-md-2 col-6">
        <div class="wc-row text-right">
        {% comment %}  <div class="user-action">
            <a href="/pages/update-profile">
              <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M8.5 0C6.02839 0 4.01758 2.01081 4.01758 4.48242C4.01758 6.95403 6.02839 8.96484 8.5 8.96484C10.9716 8.96484 12.9824 6.95403 12.9824 4.48242C12.9824 2.01081 10.9716 0 8.5 0ZM8.5 7.96875C6.57764 7.96875 5.01367 6.40478 5.01367 4.48242C5.01367 2.56006 6.57764 0.996094 8.5 0.996094C10.4224 0.996094 11.9863 2.56006 11.9863 4.48242C11.9863 6.40478 10.4224 7.96875 8.5 7.96875Z" fill="white"/>
                <path d="M14.077 11.8932C12.8498 10.6471 11.223 9.96094 9.49609 9.96094H7.50391C5.77708 9.96094 4.15019 10.6471 2.923 11.8932C1.70183 13.1331 1.0293 14.7698 1.0293 16.502C1.0293 16.777 1.25229 17 1.52734 17H15.4727C15.7477 17 15.9707 16.777 15.9707 16.502C15.9707 14.7698 15.2982 13.1331 14.077 11.8932ZM2.0473 16.0039C2.29683 13.1788 4.6488 10.957 7.50391 10.957H9.49609C12.3512 10.957 14.7032 13.1788 14.9527 16.0039H2.0473Z" fill="white"/>
              </svg>
            </a>
          </div>{% endcomment %}
          <div class="menu-icon">
            <a href="javascript:void(0)">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M18 3H2V4H18V3Z" fill="white" stroke="white" stroke-width="0.25"/>
                <path d="M18 9H2V10H18V9Z" fill="white" stroke="white" stroke-width="0.25"/>
                <path d="M18 15H2V16H18V15Z" fill="white" stroke="white" stroke-width="0.25"/>
              </svg>
            </a>
            
            <div class="splash"></div>
            
            <div class="sidebar-navigation">
              
              <div class="cross-close-icon">
                <svg width="18" height="17" viewBox="0 0 18 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <line x1="2.53033" y1="1.46967" x2="17.2582" y2="16.1976" stroke="white" stroke-width="1.5"/>
                  <line x1="1.46967" y1="16.1976" x2="16.1976" y2="1.46969" stroke="white" stroke-width="1.5"/>
                </svg>
              </div>
              
              <div class="unity-section-area">
                <div class="unity--content">
                  {% if section.settings.unity_images %}
                  	<div class="unity-logo-images">
                      <img src="{{ section.settings.unity_images | img_url: 'master' }}" alt="img-logo" class="img-fluid">
                    </div>
                  {% endif %}
                  
                  {% if section.settings.unity-content %}
                  	<div class="unity-content">
                      {{ section.settings.unity-content }}
                    </div>
                  {% endif %}
                </div>
              </div>
              
              <div class="menu-content-area">
                <div class="bugger-menu-content">
                  {% assign bugger_menu = section.settings.burger-menu %}
                  <ul class="bugger--style__links">
                    {% for link in linklists[bugger_menu].links %}
                      <li class="bugger-links">
                        <a href="{{ link.url }}" class="shop-link">{{ link.title }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                </div>
              
                <div class="menu-bottom-area">
                    <div class="back-unity position--area close-menu">
                      <a href="/pages/unite-hub" class="title">Back to Unite Hub</a>
                    </div>
                  {% if section.settings.menu_text %}
                    <div class="back-unity position--area close-menu">
                      <a href="https://uk.dailypaperclothing.com/" class="title">{{ section.settings.menu_text }}</a>
                    </div>
                  {% endif %}
                  {% if section.settings.about_unite %}
                    <div class="unity-text-area position--area">
                      <a href="javascript:void(0)" class="open-unity-menu title">{{ section.settings.about_unite }}</a>
                    </div>
                  {% endif %}
                </div>
              </div>
              
            </div>
            
          </div>
          
        </div>
      </div>
      
    </div>
  </div>
</header>

<script>
  $('.menu-icon a').click(function() {
    $('body').addClass('MenuOpen');
    $('.cross-close-icon').addClass('close-menu');
  });
  
  $('.unity-text-area a').click(function() {
    $('body').addClass('unity-class');
    $('.cross-close-icon').removeClass('close-menu').addClass('unity-close');
  });
  
  $('body').on('click', '.unity-close', function() {
    $('body').removeClass('unity-class');
    $('.cross-close-icon').removeClass('unity-close').addClass('close-menu');
  });
  
  $('body').on('click', '.close-menu', function() {
    console.log('success');
    $('body').removeClass('MenuOpen');
  });
  
  $('.close-menu').click(function() {
    $('body').removeClass('MenuOpen');
  });
  

  $(window).scroll(function(){
    var sticky = $('.blog-content-header'),
        scroll = $(window).scrollTop();
    if (scroll >= 100) sticky.css('position', 'static');
    else sticky.css('position', 'fixed');
  });
 
</script>

{% schema %}
  {
    "name": "Blog Landing Header",
    "settings": [
	  {
        "type": "image_picker",
        "id": "image-logo",
        "label": "Logo"
	  },
	  {
		"type": "link_list",
		"id": "blog-menu",
		"label": "Blog Navigation"
	  },
	  {
		"type": "link_list",
		"id": "burger-menu",
		"label": "Blog Navigation Burger Menu"
	  },
	  {
		"type": "text",
		"id": "menu_text",
		"label": "Menu return text",
		"default": "Back to store"
	  },
	  {
		"type": "text",
		"id": "about_unite",
		"label": "About Unite title",
		"default": "About Unite"
	  },
	  {
		"type": "image_picker",
		"id": "unity_images",
		"label": "Unity Images"
	  },
	  {
		"type": "richtext",
		"id": "unity-content",
		"label": "Unity Content"
	  }
	]
  }
{% endschema %}

