.cbp-spmenu {
	position: fixed
}

.cbp-spmenu h3 {
	margin: 0
}

.cbp-spmenu a {
	display: block
}

.cbp-spmenu-vertical {
	width: 260px;
	height: 100%;
	top: 0;
	z-index: 1000
}

.cbp-spmenu-vertical a {
	padding: 1em
}

.cbp-spmenu-left {
	left: -260px
}

.cbp-spmenu-left.cbp-spmenu-open {
	left: 0
}

.cbp-spmenu-push-toright {
	left: 260px
}

.cbp-spmenu,
.cbp-spmenu-push {
	-webkit-transition: .3s;
	-moz-transition: .3s;
	transition: .3s
}