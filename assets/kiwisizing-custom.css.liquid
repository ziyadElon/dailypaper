  /* START KIWI SIZING */

  .ks-modal-header {
    display: none !important;
  }
  .kiwiSizingLoaded div:nth-child(3) {
    display:none !important;
  }
  
  .ks-modal.modal-style-0 .ks-calculator-tab-container .ks-calculator-container-content {
     /* max-width: 100% !important;**/
     width:110% !important;

  }
  .ks-calculator-element {
    width:50% !important;
  }
  .ks-calculator-tab-container {
    margin:0 -15px -15px -15px !important;
  }

  .ks-calculator-element {
    display:inline-block !important;
  }
  .formula-element {
    width:100% !important;
  }
  
  .modal-style-0 .ks-modal-close {
      font-size: 25px !important;
      line-height: 30px !important;
      height: 25px !important;
      width: 25px !important;
  }
  
  .ks-modal-tab-wrapper .ks-modal-tab {
    font-size: 13px !important;
    border-bottom: 0px !important;
    padding: 0 0 1rem 0.5rem !important;
    text-align: left !important;
  }
  
  .ks-modal-tab-wrapper {
    margin: 0 !important;
  }
  
  .ks-modal-tab-wrapper .ks-modal-tab.selected {
      font-weight: bold !important;
    border-bottom: 3px solid #000 !important;
  }
  
  .ks-calculator-tab-container .ks-calculator-container .ks-calculator-header {
    font-size: 13px !important;
  border-bottom: 1px solid rgba(208,208,208,1);
  }
  
  .ks-calculator-container .ks-calculator-element.formula-element {
    border-top: 1px solid rgba(208,208,208,1);
  }
  
  .ks-calculator-container .ks-calculator-element:nth-child(1) {
    margin: 20px 0 !important;
  }
  
  .ks-calculator-container .ks-calculator-element:nth-child(2) {
    margin: 20px 0 0 !important;
  }
  
  .ks-calculator-element .element-input-container.number-input-element .element-input {
    border-radius: 0 !important;
    height: 37px !important;
  }
  
  .kiwi-sizing-modal-content, .ks-calculator-tab-container .ks-calculator-container {
    margin: 0 auto !important;
  }
  
  .ks-calculator-tab-container .ks-calculator-image {
    display:none !important;
  }
  .ks-carousel-content-btn {
    border-radius: 0 !important;
  }
  
  .ks-calculator-carousel-container .ks-carousel-mid {
      background-color: #000 !important;
  }
  
  .ks-calculator-carousel-container .ks-carousel-left, .ks-calculator-carousel-container .ks-carousel-right {
      background-color: #ccc !important;
  }
  
  .kiwi-sizing-modal.modal-style-0 .kiwi-sizing-modal-inner {
    width: 650px !important;
  }
  
  .ks-calculator-element.formula-element .element-label {
      padding-bottom: 6px !important;
  }
  
  .kiwi-sizing-image-and-caption-block h2, .ks-html-content h2, .ks-html-content span{
    font-size: 13px !important;
    margin-bottom: 10px !important;
    text-decoration: underline !important;
  }
  
  .kiwi-sizing-image-and-caption .caption-position-right .image-block, .ks-html-content .caption-position-right .image-block {
    padding-right: 15px !important;
  }
  
  .kiwi-sizing-image-and-caption, .ks-html-content {
    margin-top: 30px !important;
    margin-left: 0.5rem !important;
    margin-right: 0.5rem !important;
  }
  
  .vanilla-modal.kiwi-sizing-modal-visible .kiwi-sizing-modal .kiwi-sizing-modal-inner {
      position: absolute;
      transform: translate(-50%,-50%);
      top: 50% !important;
      left: 50%;
    margin-left: 0 !important
  }
  
  .kiwi-sizing-modal.modal-style-0 .ks-modal-no-images .kiwi-sizing-modal-content {
    border: 1px solid rgb(208, 208, 208) !important;
  }
  
  .vanilla-modal.kiwi-sizing-modal-visible .kiwi-modal-style-0 .kiwi-modal-backdrop {
    opacity: 0.8 !important;
  }
  
  .ks-calculator-tab-container[data-has-image] {
    margin-top:25px !important;
      padding-left: 0px !important; 
    min-height:200px !important;
  }
  
  
  
  @media (max-width: 767px){
  
  .kiwi-sizing-modal.modal-style-0 .kiwi-sizing-modal-inner {
    width: 80% !important;
  }
  .ks-calculator-element {
    width:100% !important;
  }
  
  }
  
  /* END KIWI SIZING */