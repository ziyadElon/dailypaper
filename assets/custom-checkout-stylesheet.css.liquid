.checkout-payments {
    border-top: 1px solid lightgray;
    border-bottom: 1px solid lightgray;
    margin-top: 30px;
    padding: 9px 0 5px;
}

.checkout-payments img {
    width: 75%;
    margin: 0 auto;
    display: block;
}

.checkout-payments p {
text-align: center;
  color:#6c6c6c;
  padding: 10px;
  font-size: 0.85714em;
}

.order-summary__sections {
height: auto;
}

.main__content {
    padding-top: 25px;
    border-top: 1px solid lightgray;
    margin-top: 1px;
}

.logo__image--large {
    max-height: 1.5em;
    margin-bottom: 10px;
}

.field__input {
  border-radius:0;
}

.btn {
  padding: 1em 1.7em;
  border-radius: 0;
}

.product-thumbnail {
    border-radius: 0;
    background: transparent;
}

.step__sections .content-box {
  border-radius: 0;
}

.product-thumbnail::after {
  border-radius: 0;
}

p.shipping-us {
  padding-top:1.5em;
 border-top:1px solid rgba(169,169,169,0.34) 
}

@media (max-width: 767px) { 
.checkout-payments {
    border-top: 0px;
    border-bottom: 0px;
    margin-top: 0;
}
  .checkout-payments img {
    display: inline-block;
}
  .checkout-payments p {
    text-align: left;
    padding: 10px 0;
  }
  .main__content {
    padding-top: 15px;
    border-top: 0;
    margin-top: 0;
}
  .logo__image--large {
    margin-bottom: 0;
    max-height: 1.4em;
}
  .banner {
    padding: 1.3em 0 1em;
/*     background: #f2f2f2 url("https://cdn.shopify.com/s/files/1/1653/6173/t/3/assets/pattern-mobile-header.jpg") repeat scroll 0 0 / 50%; */
	text-align: center;
    background:#fff;
  }
  p.shipping-us{font-size:0.8571428571em;border-top:0;}
}
