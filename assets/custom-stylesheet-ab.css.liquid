#add-to-cart-form {
  margin-top: 0; 
}

#productPrice span, .product-shop .short-description {
  margin: 20px 0 20px 0; 
}

.dp-display-d{
  display: block;

}

.dp-display-m {
  display: none;
}

@media (max-width: 500px) {

  .mobile-float {
    position: fixed !important;
    left: 0;
    bottom: 0;
    width: 100%;
    background-color: #fff;
    padding: 0 18px;
    margin-bottom: 0 !important;
  }  

  #product-variants .selector-wrapper {
    width: 50%;
    display: inline-block;
    padding: 0 10px 0 0;
    transform: translateX(-100%);
  }

  #product-variants #product-add-to-cart {
    width: 50% !important;
    display: inline-block;
    margin-bottom: 12px;
    font-size: 12px;
    height: 40px;
    transform: translateX(100%);
  }

  .selectize-dropdown, .selectize-dropdown.form-control {
    bottom: 100%;
    top: inherit;
  }

  .selectize-input.focus {
    box-shadow: none;
  }

  .product-shop .prices {
    margin-bottom: 0; 
  }

  .product-shop #country-message #NL, .product-shop #country-message #DE, .product-shop #country-message #FR, .product-shop #country-message #GB, .product-shop #country-message #BE, .product-shop #country-message #ES, .product-shop #country-message #IT, .product-shop #country-message #CH, .product-shop #country-message #US {
    margin-top: 0 !important;
  }

  .template-product .product-title {
    margin: 10px 0 16px 0 !important;  
  }

  .dp-display-d{
    display: none;

  }

  .dp-display-m {
    display: block;
  }

  .BIS-DP {
    margin-bottom: 10px;
  }

  #product-variants #product-add-to-cart {
    font-family: Avenir, 'Helvetica Neue', Helvetica, Arial, sans-serif;
    margin-bottom: 0; 
  }
  
  .owl-theme .owl-controls .owl-buttons div {
    z-index: 0;
  }
  
  #add-to-cart-form {
   margin-bottom: 8px; 
  }

}

