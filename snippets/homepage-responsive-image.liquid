  function onYouTubeIframeAPIReady() {
    player = new YT.Player('player-dp', {
      width: 1920,               // Player width (in px)
      height: 1080,              // Player height (in px)
      videoId: 'hNDgUkGgrlU',
      playerVars: {
        playlist: 'hNDgUkGgrlU',
        autoplay: 1,        // Auto-play the video on load
        autohide: 1,
