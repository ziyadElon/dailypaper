<script>
// Get the modal
const modalMobile = document.getElementById('sizechart-mobile');
// Get the button that opens the modal
const btnMobile = document.getElementById("sizechartBtn-mobile");
// Get the <span> element that closes the modal
const spanMobile = document.getElementsByClassName("sizechart-close-mobile")[0];
// When the user clicks the button, open the modal 
btnMobile.onclick = function() {
    modalMobile.style.display = "block";
}
// When the user clicks on <span> (x), close the modal
spanMobile.onclick = function() {
    modalMobile.style.display = "none";
}
// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modalMobile) {
        modalMobile.style.display = "none";
    }
}
</script>
