<div class="col-xs-3 sidebar collection-sidebar">
  <div class="sidebar-block"></div> 
  <!--   ˆˆcreated 2nd sidebar-block for sticky sidebar on scroll -->
  <div class="sidebar-block">
    <h2 class="servicesidebar"><a class="currentshop" href="/blogs/featured"><span class="arrow">/</span>Go back to blog</a></h2>
    <br>
    <h2 class="servicesidebar"><a class="currentshop" href="/collections/all">Online shop</a></h2>
    <br>
      <h2 class="servicesidebar"><a class="currentblog" href="/blogs/featured">Categories</a></h2>
        <ul class="service-sidebar-links">
          {% for link in linklists.blog-menu.links %}
            {% assign i = forloop.index | downcase %}
            {% assign cat = link.title | downcase %}
            <li {% if linklists[link.handle] != empty %}class="dropdown {% if settings.display_megamenu and items_list contains cat %}mega-menu{% endif %}"{% endif %}>
              <a href="{{ link.url }}" class="{% if link.active %}current{% endif %}">
                <span>
                  {% if settings.enable_multilang %}
                  <span class="lang1">{{ link.title | split: '|' | first }}</span>
                  <span class="lang2">{{ link.title | split: '|' | last }}</span>
                  {% else %}
                  {{ link.title | split: '|' | first }}
                  {% endif %}
                </span>
                {% if linklists[link.handle] != empty and settings.show_dropdown_arrow %}<span class="icon-dropdown"></span>{% endif %}
              </a> 	
          </li>
          {% endfor %}
        </ul>
      <br>
      <h2 class="servicesidebar">Stay Connected</h2>
      <ul class="service-sidebar-links">
        {% for link in linklists.stay-connected-menu.links %}
          {% assign i = forloop.index | downcase %}
          {% assign cat = link.title | downcase %}
          <li {% if linklists[link.handle] != empty %}class="dropdown {% if settings.display_megamenu and items_list contains cat %}mega-menu{% endif %}"{% endif %}>
            <a href="{{ link.url }}" class="{% if link.active %}current{% endif %}">
              <span>
                {% if settings.enable_multilang %}
                <span class="lang1">{{ link.title | split: '|' | first }}</span>
                <span class="lang2">{{ link.title | split: '|' | last }}</span>
                {% else %}
                {{ link.title | split: '|' | first }}
                {% endif %}
              </span>
              {% if linklists[link.handle] != empty and settings.show_dropdown_arrow %}<span class="icon-dropdown"></span>{% endif %}
            </a> 	
        </li>
        {% endfor %}
      </ul>
  </div>
</div>